<p>Be able to order heroes by attack speed and other traits</p>
<div class="filter--clear-all">
    <button {{action 'clearAll'}}>Clear All</button>
</div>
<div class="filter">
    <button class="filter__trait" onclick={{action 'toggleFilterAssassin'}}>Assassin</button>
    <button class="filter__trait"{{action 'toggleFilterAttacker'}}>Attacker</button>
    <button class="filter__trait"{{action 'toggleFilterBurst'}}>Burst</button>
    <button class="filter__trait"{{action 'toggleFilterController'}}>Controller</button>
    <button class="filter__trait"{{action 'toggleFilterDurable'}}>Durable</button>
    <button class="filter__trait"{{action 'toggleFilterElusive'}}>Elusive</button>
    <button class="filter__trait"{{action 'toggleFilterGanker'}}>Ganker</button>
    <button class="filter__trait"{{action 'toggleFilterGuardian'}}>Guardian</button>
    <button class="filter__trait"{{action 'toggleFilterInitiator'}}>Initiator</button>
    <button class="filter__trait"{{action 'toggleFilterMarauder'}}>Marauder</button>
    <button class="filter__trait"{{action 'toggleFilterSieger'}}>Sieger</button>
    <button class="filter__trait"{{action 'toggleFilterWild'}}>Wild</button>
    <button class="filter__trait"{{action 'toggleFilterZoner'}}>Zoner</button>
</div>
<div class="heroes">
    {{#each testArray1 as |hero index|}}
    <div class="hero">
        <div class="basics">
            <div class="portrait">
                <img src="{{hero._data.images}}" alt="Hero image">
            </div>
            <div class="name">
                <p>{{hero.id}}</p>
                <p>{{hero._data.name}}</p>
            </div>
        </div>
        <div class="advanced">
            {{heroes-bar-stat heroData=hero._data maxAps=maxAps minAps=minAps maxDps=maxDps minDps=minDps maxBurst=maxBurst minBurst=minBurst }}
            <p>Attacks per second: {{hero._data.AttacksPerSecond}}</p>
            <p>Damage per second: {{hero._data.DamagePerSecond}}</p>
            <p>Burst Damage: {{hero._data.BurstDamage}}</p>
            <!--#each hero._data.attributesByLevel as |stat|
            <p>{{stat.BaseAttackTime}}</p>
            /each-->
        </div>
    </div>
    {{/each}}
</div>